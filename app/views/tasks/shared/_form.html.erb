<%= form_for(task) do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content %><br>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :start_time %><br>
    <%= form.datetime_field :start_time %>
  </div>

  <div>
    <%= form.label :end_time %><br>
    <%= form.datetime_field :end_time %>
  </div>

  <%= form.submit %>
<% end %>
