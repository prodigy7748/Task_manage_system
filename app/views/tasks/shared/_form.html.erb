<% if task.errors.any? %>
  <% task.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>

<%= form_for(task, html: { class: 'task_form' }) do |form| %>
  <div>
    <%= form.label :title, I18n.t("tasks.table.title") %><br>
    <%= form.text_field :title, placeholder: I18n.t("tasks.form.placeholder.title") %>
  </div>

  <div>
    <%= form.label :content, I18n.t("tasks.table.content") %><br>
    <%= form.text_area :content, placeholder: I18n.t("tasks.form.placeholder.content") %>
  </div>

  <div>
    <%= form.label :start_time, I18n.t("tasks.table.start_time") %><br>
    <%= form.datetime_field :start_time %>
  </div>

  <div>
    <%= form.label :end_time, I18n.t("tasks.table.end_time") %><br>
    <%= form.datetime_field :end_time %>
  </div>

  <%= form.submit %>
<% end %>
